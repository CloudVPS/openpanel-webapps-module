class WebApps:WordPress       < uuid 58c8d270-5841-4344-8502-7bdfda17ed1b
                              < version 1.0
                              < indexing manual
                              < requires Domain:Vhost
                              < uniquein class
                              < shortname WordPress
                              < title WordPress
                              < description WordPress v3.1 Installation and Configuration
                              < capabilities create delete #update
                              < metatype derived
                              < metabase Meta:WebApps
                              < metadescription $name
                              < maxinstances 1
 
    enum wp-model             : Version
                              < enabled false
                              < default WordPress
                              < gridwidth 10
       
    string name               : Site Title
                              < regexp ^[a-zA-Z0-9 ]*$
                              < gridwidth 10
       
    string id                 : Sub-folder (/ for root)
                              < regexp ^/[a-zA-Z0-9-/]*/$
                              < default /
                              < example /
                              < gridwidth 10
                              < required false
 
    password password         : Database Password
                              < gridhide true
                              < visible false
 
    password password2        : Repeat Password
                              < gridhide true
                              < visible false
 
    string email              : Admin Email
                              < example webmaster@example.net
                              < regexp .+@.+
                              
